[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    .tox,
    .nox,
    .ruff_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
max-complexity = 10
select = E,W,F,C
