<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- FROST Design System - Color Palette                              -->
    <!-- Violet-Indigo primary, Teal accents, Slate neutrals              -->
    <!-- ================================================================ -->

    <!-- Primary - Violet Indigo -->
    <Color x:Key="PrimaryColor">#6366F1</Color>
    <Color x:Key="PrimaryHoverColor">#4F46E5</Color>
    <Color x:Key="PrimaryDarkColor">#4338CA</Color>
    <Color x:Key="PrimaryLightColor">#E0E7FF</Color>
    <Color x:Key="PrimaryGhostColor">#EEF2FF</Color>

    <!-- Accent - Teal -->
    <Color x:Key="AccentColor">#14B8A6</Color>
    <Color x:Key="AccentHoverColor">#0D9488</Color>
    <Color x:Key="AccentLightColor">#CCFBF1</Color>

    <!-- Success - Emerald -->
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="SuccessHoverColor">#059669</Color>
    <Color x:Key="SuccessLightColor">#D1FAE5</Color>
    <Color x:Key="SuccessDarkColor">#065F46</Color>

    <!-- Warning - Amber -->
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="WarningHoverColor">#D97706</Color>
    <Color x:Key="WarningLightColor">#FEF3C7</Color>
    <Color x:Key="WarningDarkColor">#92400E</Color>

    <!-- Error - Rose -->
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="ErrorHoverColor">#DC2626</Color>
    <Color x:Key="ErrorLightColor">#FEE2E2</Color>
    <Color x:Key="ErrorDarkColor">#991B1B</Color>

    <!-- Neutral Grays - Slate -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="SnowColor">#FAFBFC</Color>
    <Color x:Key="Gray50Color">#F8FAFC</Color>
    <Color x:Key="Gray100Color">#F1F5F9</Color>
    <Color x:Key="Gray200Color">#E2E8F0</Color>
    <Color x:Key="Gray300Color">#CBD5E1</Color>
    <Color x:Key="Gray400Color">#94A3B8</Color>
    <Color x:Key="Gray500Color">#64748B</Color>
    <Color x:Key="Gray600Color">#475569</Color>
    <Color x:Key="Gray700Color">#334155</Color>
    <Color x:Key="Gray800Color">#1E293B</Color>
    <Color x:Key="Gray900Color">#0F172A</Color>

    <!-- Auth Theme - Coral/Pink -->
    <Color x:Key="AuthPrimaryColor">#FF4B2B</Color>
    <Color x:Key="AuthSecondaryColor">#FF416C</Color>

    <!-- ================================================================ -->
    <!-- SOLID COLOR BRUSHES                                              -->
    <!-- ================================================================ -->

    <!-- Primary -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryGhostBrush" Color="{StaticResource PrimaryGhostColor}" />

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}" />

    <!-- Success -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{StaticResource SuccessHoverColor}" />
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}" />

    <!-- Warning -->
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}" />

    <!-- Error -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="ErrorHoverBrush" Color="{StaticResource ErrorHoverColor}" />
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}" />

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Gray900Color}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Gray600Color}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource Gray400Color}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource Gray400Color}" />
    <SolidColorBrush x:Key="TextInverseBrush" Color="{StaticResource WhiteColor}" />

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource SnowColor}" />
    <SolidColorBrush x:Key="BgPageBrush" Color="#F3F5FB" />
    <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="BgSidebarBrush" Color="{StaticResource Gray900Color}" />
    <SolidColorBrush x:Key="BgSidebarHoverBrush" Color="{StaticResource Gray800Color}" />
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource Gray100Color}" />
    <SolidColorBrush x:Key="BgHoverBrush" Color="{StaticResource Gray200Color}" />

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Gray300Color}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource Gray200Color}" />
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource PrimaryColor}" />

    <!-- ================================================================ -->
    <!-- GRADIENT BRUSHES                                                 -->
    <!-- ================================================================ -->

    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366F1" Offset="0" />
        <GradientStop Color="#4F46E5" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10B981" Offset="0" />
        <GradientStop Color="#059669" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#14B8A6" Offset="0" />
        <GradientStop Color="#0D9488" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#EF4444" Offset="0" />
        <GradientStop Color="#DC2626" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#5B6CFF" Offset="0" />
        <GradientStop Color="#6F63F2" Offset="0.5" />
        <GradientStop Color="#7C5CE6" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#111827" Offset="0" />
        <GradientStop Color="#0B1220" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AuthGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF4B2B" Offset="0" />
        <GradientStop Color="#FF416C" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
