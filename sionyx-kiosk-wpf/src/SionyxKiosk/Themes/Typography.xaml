<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ================================================================ -->
    <!-- FROST Design System - Typography                                 -->
    <!-- Segoe UI, modular scale, clear hierarchy                         -->
    <!-- ================================================================ -->

    <!-- Font Families (Segoe UI Variable is the Windows 11 system font;
         falls back to Segoe UI on older systems) -->
    <FontFamily x:Key="FontPrimary">Segoe UI Variable, Segoe UI</FontFamily>
    <FontFamily x:Key="FontMono">Cascadia Code, Consolas</FontFamily>

    <!-- Font Sizes (kiosk-optimized modular scale â€” larger for arm's-length reading) -->
    <sys:Double x:Key="FontSizeXs">12</sys:Double>
    <sys:Double x:Key="FontSizeSm">14</sys:Double>
    <sys:Double x:Key="FontSizeBase">16</sys:Double>
    <sys:Double x:Key="FontSizeMd">17</sys:Double>
    <sys:Double x:Key="FontSizeLg">20</sys:Double>
    <sys:Double x:Key="FontSizeXl">24</sys:Double>
    <sys:Double x:Key="FontSize2Xl">28</sys:Double>
    <sys:Double x:Key="FontSize3Xl">34</sys:Double>
    <sys:Double x:Key="FontSize4Xl">42</sys:Double>
    <sys:Double x:Key="FontSizeDisplay">56</sys:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="WeightNormal">Normal</FontWeight>
    <FontWeight x:Key="WeightMedium">Medium</FontWeight>
    <FontWeight x:Key="WeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="WeightBold">Bold</FontWeight>
    <FontWeight x:Key="WeightExtraBold">ExtraBold</FontWeight>

    <!-- ================================================================ -->
    <!-- TEXT BLOCK STYLES (Semantic Typography)                          -->
    <!-- ================================================================ -->

    <!-- Display / Hero -->
    <Style x:Key="TextDisplay" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeDisplay}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightExtraBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H1 -->
    <Style x:Key="TextH1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize3Xl}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H2 -->
    <Style x:Key="TextH2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize2Xl}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H3 -->
    <Style x:Key="TextH3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXl}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightSemiBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Subtitle -->
    <Style x:Key="TextSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeLg}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightMedium}" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <!-- Body (default) -->
    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightNormal}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Caption -->
    <Style x:Key="TextCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightNormal}" />
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

    <!-- Overline (small uppercase) -->
    <Style x:Key="TextOverline" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXs}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightSemiBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

</ResourceDictionary>
