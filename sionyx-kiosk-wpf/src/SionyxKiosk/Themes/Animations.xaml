<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- FROST Design System - Reusable Animations                        -->
    <!-- ================================================================ -->

    <!-- Animation Durations -->
    <Duration x:Key="AnimInstant">0:0:0.1</Duration>
    <Duration x:Key="AnimFast">0:0:0.15</Duration>
    <Duration x:Key="AnimNormal">0:0:0.25</Duration>
    <Duration x:Key="AnimSlow">0:0:0.4</Duration>
    <Duration x:Key="AnimVerySlow">0:0:0.6</Duration>

    <!-- Easing Functions -->
    <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut" />
    <QuadraticEase x:Key="EaseIn" EasingMode="EaseIn" />
    <QuadraticEase x:Key="EaseInOut" EasingMode="EaseInOut" />
    <CubicEase x:Key="EaseCubicOut" EasingMode="EaseOut" />
    <BackEase x:Key="EaseBackOut" EasingMode="EaseOut" Amplitude="0.3" />

    <!-- ======================== FADE IN ======================== -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseOut}" />
    </Storyboard>

    <!-- ======================== FADE OUT ======================== -->
    <Storyboard x:Key="FadeOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1" To="0"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseIn}" />
    </Storyboard>

    <!-- ======================== SLIDE IN FROM RIGHT ======================== -->
    <Storyboard x:Key="SlideInFromRight">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="50" To="0"
                         Duration="{StaticResource AnimSlow}"
                         EasingFunction="{StaticResource EaseCubicOut}" />
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseOut}" />
    </Storyboard>

    <!-- ======================== SLIDE IN FROM BOTTOM ======================== -->
    <Storyboard x:Key="SlideInFromBottom">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="30" To="0"
                         Duration="{StaticResource AnimSlow}"
                         EasingFunction="{StaticResource EaseCubicOut}" />
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseOut}" />
    </Storyboard>

    <!-- ======================== SCALE UP (POP) ======================== -->
    <Storyboard x:Key="ScaleUp">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                         From="0.9" To="1"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseBackOut}" />
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                         From="0.9" To="1"
                         Duration="{StaticResource AnimNormal}"
                         EasingFunction="{StaticResource EaseBackOut}" />
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="{StaticResource AnimFast}" />
    </Storyboard>

    <!-- ======================== PULSE (ATTENTION) ======================== -->
    <Storyboard x:Key="Pulse" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1" To="0.5"
                         Duration="0:0:0.8"
                         AutoReverse="True"
                         EasingFunction="{StaticResource EaseInOut}" />
    </Storyboard>

    <!-- ======================== SPINNER ROTATION ======================== -->
    <Storyboard x:Key="SpinForever" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                         From="0" To="360"
                         Duration="0:0:1" />
    </Storyboard>

</ResourceDictionary>
