<Window x:Class="SionyxKiosk.Views.Dialogs.ModernDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MaxWidth="480" MinWidth="360" FlowDirection="RightToLeft">
    <Border CornerRadius="16" Background="White" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="6" Direction="270" Color="#0F172A" Opacity="0.12" />
        </Border.Effect>
        <StackPanel>
            <!-- Icon -->
            <TextBlock x:Name="IconText" Text="❓" FontSize="48" HorizontalAlignment="Center"
                       Margin="0,32,0,16" />

            <!-- Title -->
            <TextBlock x:Name="TitleText" Text="" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" />

            <!-- Message -->
            <TextBlock x:Name="MessageText" Text="" Margin="32,12,32,24" TextWrapping="Wrap"
                       FontSize="{StaticResource FontSizeBase}" TextAlignment="Center"
                       Foreground="{StaticResource TextSecondaryBrush}" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="24,0,24,24">
                <Button x:Name="ConfirmButton" Content="אישור" Style="{StaticResource BtnPrimary}"
                        Width="120" Margin="0,0,8,0" Click="ConfirmButton_Click" />
                <Button x:Name="CancelButton" Content="ביטול" Style="{StaticResource BtnSecondary}"
                        Width="120" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
