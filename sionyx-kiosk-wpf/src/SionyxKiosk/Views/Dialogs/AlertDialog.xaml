<Window x:Class="SionyxKiosk.Views.Dialogs.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MaxWidth="440" MinWidth="360" FlowDirection="RightToLeft">
    <Border CornerRadius="16" Background="White" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="6" Direction="270" Color="#0F172A" Opacity="0.12" />
        </Border.Effect>
        <StackPanel>
            <!-- Header with gradient -->
            <Border x:Name="HeaderBorder" Padding="24,20"
                    Background="{StaticResource HeroGradient}">
                <StackPanel>
                    <TextBlock x:Name="IconText" Text="ℹ️" FontSize="28" Margin="0,0,0,8" />
                    <TextBlock x:Name="TitleText" Text="הודעה"
                               FontSize="20" FontWeight="Bold" Foreground="White" />
                </StackPanel>
            </Border>

            <!-- Body -->
            <TextBlock x:Name="BodyText" Text="" Margin="24,20" TextWrapping="Wrap"
                       FontSize="{StaticResource FontSizeBase}"
                       Foreground="{StaticResource TextPrimaryBrush}" />

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="24,0,24,20">
                <Button x:Name="OkButton" Content="אישור" Style="{StaticResource BtnPrimary}"
                        Width="120" Click="OkButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
