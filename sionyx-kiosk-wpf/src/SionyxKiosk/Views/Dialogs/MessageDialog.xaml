<Window x:Class="SionyxKiosk.Views.Dialogs.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" Width="520" Height="420"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">
    <Border CornerRadius="16" Background="White" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="6" Direction="270" Color="#0F172A" Opacity="0.12" />
        </Border.Effect>
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Padding="24,16" Background="{StaticResource HeroGradient}">
                <Grid>
                    <TextBlock Text="ðŸ’¬ ×”×•×“×¢×•×ª" FontSize="18" FontWeight="Bold" Foreground="White" />
                    <TextBlock x:Name="CounterText" Text="1/1" FontSize="14" Foreground="#FFFFFFBB"
                               HorizontalAlignment="Left" VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Footer buttons -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="24,16">
                <Button Content="â¬… ×”×§×•×“×" Style="{StaticResource BtnGhost}"
                        Command="{Binding PreviousMessageCommand}" Width="100" Margin="0,0,8,0"
                        IsEnabled="{Binding HasPrevious}" />
                <Button Content="×”×‘× âž¡" Style="{StaticResource BtnPrimary}"
                        Command="{Binding NextMessageCommand}" Width="100" />
            </StackPanel>

            <!-- Message content -->
            <StackPanel Margin="24,20">
                <TextBlock Text="{Binding CurrentSender}" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" />
                <TextBlock Text="{Binding CurrentTimestamp}" FontSize="12"
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,16" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <TextBlock Text="{Binding CurrentBody}" TextWrapping="Wrap"
                               FontSize="{StaticResource FontSizeBase}"
                               Foreground="{StaticResource TextSecondaryBrush}" />
                </ScrollViewer>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
