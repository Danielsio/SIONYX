<Window x:Class="SionyxKiosk.Views.Dialogs.AdminExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Access"
        WindowState="Maximized" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" FlowDirection="LeftToRight"
        ShowInTaskbar="False">

    <Grid>
        <!-- Dimmed backdrop â€” click to cancel -->
        <Border Background="#000000" Opacity="0.45" MouseLeftButtonDown="Cancel_Click" />

        <!-- Dialog card -->
        <Border Width="480" HorizontalAlignment="Center" VerticalAlignment="Center"
                CornerRadius="22" ClipToBounds="True" Padding="40,36">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.8,1">
                        <GradientStop Color="#1E1B4B" Offset="0" />
                        <GradientStop Color="#272368" Offset="0.5" />
                        <GradientStop Color="#312E81" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3730A3" Offset="0" />
                        <GradientStop Color="#4338CA" Offset="0.5" />
                        <GradientStop Color="#3730A3" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.BorderThickness>1</Border.BorderThickness>

                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="34" Height="34" CornerRadius="10" Margin="0,0,14,0"
                                VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0" />
                                    <GradientStop Color="#818CF8" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="15" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <TextBlock Text="Administrator Access" FontSize="21" FontWeight="Bold"
                                   FontFamily="Segoe UI Variable, Segoe UI" Foreground="White"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="Enter the admin password to exit the kiosk."
                               FontSize="14.5" FontFamily="Segoe UI Variable, Segoe UI"
                               Foreground="#A5B4FC" Margin="0,0,0,26" />

                    <!-- Password input -->
                    <Border CornerRadius="12" Background="#0F172A" BorderBrush="#4338CA"
                            BorderThickness="1.5" Padding="16,14" Margin="0,0,0,30">
                        <PasswordBox x:Name="PasswordInput" FontSize="16"
                                     FontFamily="Segoe UI Variable, Segoe UI"
                                     Foreground="White" CaretBrush="White"
                                     Background="Transparent" BorderThickness="0" />
                    </Border>

                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" IsCancel="True"
                                Padding="30,12" Margin="0,0,14,0"
                                FontSize="14" FontWeight="SemiBold"
                                FontFamily="Segoe UI Variable, Segoe UI"
                                Click="Cancel_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="Transparent"
                                            CornerRadius="11" Padding="{TemplateBinding Padding}"
                                            BorderBrush="#4C4F82" BorderThickness="1.5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          TextBlock.Foreground="#C7D2FE" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#252252" />
                                            <Setter TargetName="bg" Property="BorderBrush" Value="#6366F1" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Confirm" IsDefault="True"
                                Padding="30,12"
                                FontSize="14" FontWeight="SemiBold"
                                FontFamily="Segoe UI Variable, Segoe UI"
                                Click="OK_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" CornerRadius="11" Padding="{TemplateBinding Padding}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#6366F1" Offset="0" />
                                                <GradientStop Color="#818CF8" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          TextBlock.Foreground="White" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#4F46E5" Offset="0" />
                                                        <GradientStop Color="#6366F1" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
    </Grid>
</Window>
