<Window x:Class="SionyxKiosk.Views.Dialogs.AdminExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Access" Width="460" Height="260"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" FlowDirection="LeftToRight"
        ShowInTaskbar="False">
    <Border CornerRadius="16" ClipToBounds="True" Padding="36,32">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1B4B" Offset="0" />
                <GradientStop Color="#312E81" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="80" ShadowDepth="0" Opacity="0.5" Color="#000000" />
        </Border.Effect>
        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Border Width="28" Height="28" CornerRadius="7" Margin="0,0,10,0"
                        VerticalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6366F1" Offset="0" />
                            <GradientStop Color="#818CF8" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="&#x1F512;" FontSize="13" HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <TextBlock Text="Administrator Access" FontSize="18" FontWeight="Bold"
                           FontFamily="Segoe UI Variable, Segoe UI" Foreground="White"
                           VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="Enter the admin password to exit the kiosk."
                       FontSize="14" FontFamily="Segoe UI Variable, Segoe UI"
                       Foreground="#A5B4FC" Margin="0,0,0,20" />

            <!-- Password input styled to match dark theme -->
            <Border CornerRadius="12" Background="#0F172A" BorderBrush="#4338CA"
                    BorderThickness="1.5" Padding="16,13" Margin="0,0,0,24">
                <PasswordBox x:Name="PasswordInput" FontSize="15"
                             FontFamily="Segoe UI Variable, Segoe UI"
                             Foreground="White" CaretBrush="White"
                             Background="Transparent" BorderThickness="0" />
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" IsCancel="True"
                        Padding="28,11" Margin="0,0,12,0"
                        FontSize="14" FontWeight="SemiBold"
                        FontFamily="Segoe UI Variable, Segoe UI"
                        Click="Cancel_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="Transparent"
                                    CornerRadius="10" Padding="{TemplateBinding Padding}"
                                    BorderBrush="#4C4F82" BorderThickness="1.5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.Foreground="#C7D2FE" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#1E1B4B" />
                                    <Setter TargetName="bg" Property="BorderBrush" Value="#6366F1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Confirm" IsDefault="True"
                        Padding="28,11"
                        FontSize="14" FontWeight="SemiBold"
                        FontFamily="Segoe UI Variable, Segoe UI"
                        Click="OK_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#6366F1" Offset="0" />
                                        <GradientStop Color="#818CF8" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.Foreground="White" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4F46E5" Offset="0" />
                                                <GradientStop Color="#6366F1" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
