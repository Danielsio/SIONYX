<Window x:Class="SionyxKiosk.Views.Dialogs.AdminExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Access" Width="420" Height="220"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" FlowDirection="LeftToRight">
    <Border CornerRadius="12" Background="White" Padding="32,24" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="4" Opacity="0.25" Color="#000000" />
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="Administrator Access" FontSize="18" FontWeight="Bold"
                       Foreground="#1E293B" Margin="0,0,0,16" />
            <TextBlock Text="Enter administrator password to exit:" FontSize="13"
                       Foreground="#64748B" Margin="0,0,0,12" />
            <PasswordBox x:Name="PasswordInput" FontSize="14" Padding="12,10"
                         Margin="0,0,0,20" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Padding="20,10" Margin="0,0,8,0"
                        FontSize="13" FontWeight="SemiBold"
                        Background="#F1F5F9" Foreground="#64748B" BorderThickness="0"
                        Click="Cancel_Click" Cursor="Hand" />
                <Button Content="OK" Padding="20,10"
                        FontSize="13" FontWeight="SemiBold"
                        Background="#3B82F6" Foreground="White" BorderThickness="0"
                        Click="OK_Click" Cursor="Hand" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
