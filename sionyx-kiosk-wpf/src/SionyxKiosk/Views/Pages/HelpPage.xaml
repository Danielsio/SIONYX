<Page x:Class="SionyxKiosk.Views.Pages.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:SionyxKiosk.Views.Controls"
      Title="注专" FlowDirection="RightToLeft">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <StackPanel>
            <controls:PageHeader Title="注专 转" Subtitle="砖转 驻爪转 爪专转 拽砖专" Margin="0,0,0,24" />

            <!-- FAQ Accordion -->
            <TextBlock Text="砖转 驻爪转" Style="{StaticResource TextH3}" Margin="0,0,0,16" />

            <ItemsControl ItemsSource="{Binding FaqItems}" Margin="0,0,0,32">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="{StaticResource RadiusMd}"
                                Padding="20,16" Margin="0,0,0,8"
                                BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Question}" FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeBase}"
                                           Foreground="{StaticResource TextPrimaryBrush}" />
                                <TextBlock Text="{Binding Answer}"
                                           FontSize="{StaticResource FontSizeSm}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" Margin="0,8,0,0" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Contact card -->
            <TextBlock Text="爪专转 拽砖专" Style="{StaticResource TextH3}" Margin="0,0,0,16" />
            <Border Background="White" CornerRadius="{StaticResource RadiusLg}" Padding="24">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Direction="270" Color="#0F172A" Opacity="0.06" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding OrgName}" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text=" " FontSize="16" />
                        <TextBlock Text="{Binding AdminPhone}" FontSize="15"
                                   Foreground="{StaticResource PrimaryBrush}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" " FontSize="16" />
                        <TextBlock Text="{Binding AdminEmail}" FontSize="15"
                                   Foreground="{StaticResource PrimaryBrush}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
