<UserControl x:Class="SionyxKiosk.Views.Controls.EmptyState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,48">
        <TextBlock Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="48" HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,16" />
        <TextBlock Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource TextSubtitle}" HorizontalAlignment="Center"
                   Foreground="{StaticResource TextMutedBrush}" />
    </StackPanel>
</UserControl>
