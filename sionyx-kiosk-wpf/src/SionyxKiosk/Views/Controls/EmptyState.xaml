<UserControl x:Class="SionyxKiosk.Views.Controls.EmptyState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,56">
        <TextBlock Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="56" HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,20" />
        <TextBlock Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="{StaticResource FontSizeXl}" FontWeight="Medium"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}" />
    </StackPanel>
</UserControl>
