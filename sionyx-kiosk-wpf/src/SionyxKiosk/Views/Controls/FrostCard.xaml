<UserControl x:Class="SionyxKiosk.Views.Controls.FrostCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="CardBorder"
            Background="White"
            CornerRadius="{StaticResource RadiusLg}"
            Padding="{Binding Padding, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=24}"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Direction="270"
                              Color="#0F172A" Opacity="0.08" />
        </Border.Effect>
        <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>
