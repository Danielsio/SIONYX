<UserControl x:Class="SionyxKiosk.Views.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SionyxKiosk.Views.Controls"
             Visibility="Collapsed">
    <Grid Background="#B3000000">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <controls:LoadingSpinner HorizontalAlignment="Center" Margin="0,0,0,16" />
            <TextBlock Text="{Binding LoadingText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="{StaticResource FontSizeLg}" Foreground="White"
                       HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
