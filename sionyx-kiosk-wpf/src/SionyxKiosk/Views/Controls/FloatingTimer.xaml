<Window x:Class="SionyxKiosk.Views.Controls.FloatingTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Width="380" Height="90" ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border x:Name="TimerBorder" CornerRadius="16" Padding="20,12"
            ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1B4B" Offset="0" />
                <GradientStop Color="#312E81" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="4" Direction="270"
                              Color="#000000" Opacity="0.35" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Time remaining (primary) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock x:Name="TimeText" Text="00:00:00"
                           FontSize="26" FontWeight="Bold" FontFamily="Cascadia Code, Consolas"
                           Foreground="White" />
                <TextBlock x:Name="TimeLabel" Text="זמן נותר" FontSize="11"
                           Foreground="#A5B4FC" FontWeight="Medium" />
            </StackPanel>

            <!-- Usage time + Print balance (secondary) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock x:Name="UsageText" Text="00:00" FontSize="13" FontFamily="Cascadia Code, Consolas"
                           Foreground="#C7D2FE" />
                <TextBlock x:Name="PrintText" Text="0.00 ₪" FontSize="13" FontFamily="Cascadia Code, Consolas"
                           Foreground="#C7D2FE" />
            </StackPanel>

            <!-- Offline indicator -->
            <Border x:Name="OfflineBadge" Grid.Column="2" Visibility="Collapsed"
                    Background="#FEF3C7" CornerRadius="8" Padding="8,3" Margin="10,0,0,0"
                    VerticalAlignment="Center">
                <TextBlock Text="⚠ Offline" FontSize="11" FontWeight="SemiBold"
                           Foreground="#92400E" />
            </Border>

            <!-- Return to app button -->
            <Button Grid.Column="3" Content="↩"
                    FontSize="20" Width="40" Height="40" Padding="0"
                    ToolTip="חזרה לאפליקציה" Margin="10,0,0,0"
                    Foreground="#C7D2FE" Background="Transparent" BorderThickness="0"
                    Cursor="Hand" Click="ReturnButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="#FFFFFF10" CornerRadius="10"
                                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="#C7D2FE"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFFFFF22" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
